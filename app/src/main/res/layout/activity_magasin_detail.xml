<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/fond_clair"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_nom"
            android:textSize="20sp"
            android:textColor="@color/rose_fonce"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_adresse"
            android:layout_marginBottom="16dp"
            android:textColor="@color/texte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_stock"
            android:textColor="@color/texte"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_itineraire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Voir l'itinÃ©raire"
            android:backgroundTint="@color/rose"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/button_boussole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ouvrir la boussole"
            android:backgroundTint="@color/rose_fonce"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
