<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.MagasinDetailActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvMagasinNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du magasin"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMagasinAdresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse"
        app:layout_constraintTop_toBottomOf="@id/tvMagasinNom"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvMagasinPassion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passion"
        app:layout_constraintTop_toBottomOf="@id/tvMagasinAdresse"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvMagasinStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock disponible :"
        app:layout_constraintTop_toBottomOf="@id/tvMagasinPassion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnItineraire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ItinÃ©raire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>